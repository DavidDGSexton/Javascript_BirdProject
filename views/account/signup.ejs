<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Animal Project'}); %>

  <body>
    <link rel="stylesheet" href="/styles/login-styles.css">
    <div class="container">
      <div class="card center" >
        <h1 style="text-align: center;">Signup</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/account/signup" method="post">
          <div class="form-group">
            <label>Email</label>
            <input required type="text" class="form-control" name="email" placeholder="example@email.com"/>
          </div>
          <div class="form-group">
            <label>First Name</label>
            <input required type="text" class="form-control" name="firstName" placeholder="first"/>
          </div>
          <div class="form-group">
            <label>Last Name</label>
            <input required type="text" class="form-control" name="lastName" placeholder="last" />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input
              required
              type="password"
              class="form-control"
              name="password"
              placeholder="password"
            />
          </div>
          <input type="hidden" name="role" value="general-user" />
          <button type="submit" class="btn btn-warning btn-lg" style="float: right">Signup</button>
        </form>
        <hr />
        <p>Already have an account? <a href="/account/login">Login</a></p>
      </div>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
