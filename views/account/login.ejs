<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Animal Project'}); %>
  <body>
    <div class="container">
      <link rel="stylesheet" href="/styles/login-styles.css" />
      <link rel="stylesheet" href="/styles/my-colors.css" />

      <div class="card center">
        <img src="/images/logo.png" alt="NatureReachLogo" />
        <hr />
        <h1 style="text-align: center">Login</h1>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->

        <form action="/account/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input
              required
              type="text"
              class="form-control"
              name="email"
              placeholder="example@email.com"
            />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input
              required
              type="password"
              class="form-control"
              name="password"
              placeholder="password"
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary btn-lg"
            style="float: right"
          >
            Login
          </button>
        </form>

        <hr />

        <!-- <p style="text-align: center;">Need an account? <a href="/account/signup">Signup</a></p> -->
      </div>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
