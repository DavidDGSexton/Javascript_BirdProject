<!--This is a confirmation page for deletion-->

<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Delete User - Nature Reach'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>Delete</h1>
      <p>The following user will be deleted. Are you sure?</p>
      <p>Email: <%=data.email%></p>
      <p>First Name: <%=data.firstName%></p>
      <p>Last Name: <%=data.lastName%></p>
      <form method="POST" action="./delete-user" enctype="text/html">
        <input type="hidden" name="id" value="<%=data._id%>" />
        <button class="btn btn-primary">Delete</button>
      </form>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
