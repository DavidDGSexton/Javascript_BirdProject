<!--This will be the form that the user will use to edit the entries of an existing animal or to delete an existing animal entirely-->
<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'User Project'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>Edit User</h1>
      <p>Welcome to the users edit page!</p>
      <form method="POST" action="./update-user" enctype="text/html">
        <input type="hidden" name="id" value="<%=data._id%>" />
        <div class="form-group col-4">
            <label for="email">Email</label>
            <input
              type="text"
              class="form-control"
              id="userEmail"
              name="email"
              placeholder="example@email.com"
              value="<%=data.email%>"
              required
            />
          </div>
        <div class="form-group col-4">
          <label for="firstName">First Name</label>
          <input
            type="text"
            class="form-control"
            id="userFirstName"
            name="firstName"
            placeholder="first Name"
            value="<%=data.firstName%>"
            required
          />
        </div>
        <div class="form-group col-4">
          <label for="lastName">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="userLastName"
            name="lastName"
            placeholder="last name"
            value="<%=data.lastName%>"
            required
          />
        </div>
        <div class="form-group col-4">
          <label for="role">Role</label>
          <select required class="form-control" value="<%data.role%>" name="role">
          <% if (data.role == 'admin') {%>
          <option selected="selected" value="admin">
            admin
          </option>
          />
          <% } else { %>
          <option value="admin">
            admin
          </option>
          <% } %>
          <% if (data.role == 'general-user') {%>
          <option selected value="general-user">
            general-user
          </option>
          />
          <% } else { %>
          <option value="general-user">
            general-user
          </option>
          <% } %>
        </select>
          </div>

        <div class="form-group col-4">
          <button
          type="submit"
          onclick="window.location.href='/users/view-users';"
          class="btn btn-primary"
          style=" float: left;"
        >
          Back
        </button>

        <button form-group col-4
        type="submit"
        value="POST"
        class="btn btn-primary"
        style=" margin-left: 20px;"
      >
        Submit
      </button>
      </div>
       
      </div>
      </form>
    </div>

    <% include ../partials/scripts %>
  </body>
</html>
