<!--This is a confirmation page for deletion-->

<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Delete Food - Nature Reach'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>Delete</h1>
      <p>The following food will be deleted. Are you sure?</p>
      <p>Name: <%=data.name%></p>
      <form method="POST" action="./delete-food" enctype="text/html">
        <input type="hidden" name="id" value="<%=data._id%>" />
        <button class="btn btn-primary">Delete</button>
      </form>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
