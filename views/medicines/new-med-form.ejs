<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Create Medicine - Nature Reach'});
  %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>New medication!</h1>
      <form
        method="POST"
        action="/medicines/create-medicine"
        enctype="text/html"
      >
        <div class="form-group col-md-4 col-sm-12">
          <label for="medicineName">Name</label>
          <input
            type="text"
            class="form-control"
            id="medicineName"
            name="name"
            placeholder="Enter Name"
          />
        </div>
        <button
          type="submit"
          value="Create"
          class="btn btn-primary"
          style="margin-top: 10px"
        >
          Submit
        </button>
      </form>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
