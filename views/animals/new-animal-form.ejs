<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Create Animal - Nature Reach'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>New animal!</h1>
      <form method="POST" action="./create-animal" enctype="text/html">
        <div class="form-group col-4">
          <label for="animalNickname">Nickname</label>
          <input
            type="text"
            class="form-control"
            id="animalNickname"
            name="nickname"
            placeholder="Enter Nickname"
          />
        </div>
        <div class="form-group col-4">
          <label for="animalSpecies">Species</label>
          <input
            type="text"
            class="form-control"
            id="animalSpecies"
            name="species"
            placeholder="Enter Species"
          />
        </div>
        <div class="form-group form-check col-4">
          <input
            type="checkbox"
            class="form-check-label"
            id="animalEnabled"
            name="enabled"
            placeholder="Enter Status"
          />
          <label for="animalEnabled">Enabled</label>
        </div>
        <button
          type="submit"
          value="Create"
          class="btn btn-primary"
          style="margin-top: 10px"
        >
          Submit
        </button>
      </form>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
