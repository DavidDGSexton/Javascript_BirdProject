<!--This will be the main animals view that show an overview of the existing animals database--> 

<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Animal Project'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>View All Animals</h1>
      <p>Welcome to the view all animals page!</p>
      <button onclick="window.location.href='./new-animal-form';" style="margin-top: 15px; margin-bottom: 30px" class="btn btn-primary">
        New Animal
      </button>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Nickname</th>
            <th scope="col">Species</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].nickname %></td>
                <td><%= data[i].species %></td>
                <td><a href="/animals/update-animal?id=<%=data[i]._id%>">Update</a> 
                    |<a href="/animals/delete-animal?id=<%=data[i]._id%>">Delete</a></td>
            </tr>
        <% } %>
        </tbody>
      </table>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
